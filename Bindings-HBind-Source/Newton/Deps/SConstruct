# download, and build Newton Dynamics from pre-build binaries or source

from os.path import expanduser, exists
import os

home = expanduser("~")
env = Environment() 
env["ENV"]["PATH"] = os.environ.get("PATH")
libpath = home + "/.HGamer3D/lib"
Alias('install', libpath)

# for both platforms, download and extract sources
if (not exists("newton-dynamics-2.36.rar")):
   env.Command("newton-dynamics-2.36.rar", "", "wget -O newton-dynamics-2.36.rar https://newton-dynamics.googlecode.com/files/newton-dynamics-2.36.rar")
env.Command("newton-dynamics-2.36", "newton-dynamics-2.36.rar", "unrar x newton-dynamics-2.36.rar")

