Name: "german"; MessagesFile: "compiler:Languages\German.isl"

[Dirs]
Name: "{pf}\HGamer3D\<VersionHG3D>\config"; Permissions: everyone-modify;

[Files]
Source: "files\*"; DestDir: "{pf}\HGamer3D\<VersionHG3D>"; Flags: ignoreversion recursesubdirs createallsubdirs
Source: "Readme.txt"; DestDir: "{pf}\HGamer3D\<VersionHG3D>"; Flags: isreadme
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[CustomMessages]
ApiDocumentation=API Documentation
Examples=Examples - Start Here

[Icons]
Name: "{group}\{cm:ProgramOnTheWeb,HGamer3D-<VersionHG3D>}"; Filename: "http://www.hgamer3d.org"
Name: "{group}\{cm:UninstallProgram,HGamer3D-<VersionHG3D>}"; Filename: "{uninstallexe}"

[Tasks]
Name: vcredist; Description: &Visual C++ 2010 redistributable (needed to run programs)

[Run]
Filename: "{pf}/HGamer3D/<VersionHG3D>/vc2010-redist/vcredist_x86.exe"; Parameters: "/q"; Tasks: "vcredist"


[Registry]
Root: HKLM; Subkey: "SOFTWARE\Microsoft\Windows\CurrentVersion\App Paths\hg3dpath<VersionHG3DWOD>.exe"; ValueType: string; ValueName: ""; ValueData: "{pf}\HGamer3D\<VersionHG3D>\bin\hg3dpath<VersionHG3DWOD>.exe"
