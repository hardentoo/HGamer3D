Root: HKLM; Subkey: "SOFTWARE\Microsoft\Windows\CurrentVersion\App Paths\hg3dexample.exe"; ValueType: string; ValueName: "Path"; ValueData: "{pf}\HGamer3D\<VersionHG3D>\bin"

